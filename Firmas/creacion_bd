CREATE DATABASE control_vehicular;

USE control_vehicular;

CREATE TABLE form (
  id INT PRIMARY KEY AUTO_INCREMENT,
  FechaSalida DATE,
  FechaRegreso DATE,
  HoraSalida TIME,
  HoraRegreso TIME,
  NumCons INT,
  Nombre VARCHAR(255),
  Codigo VARCHAR(255),
  Licencia VARCHAR(255),
  Vencimiento DATE,
  NumEcon INT,
  Marca VARCHAR(255),
  Tipo VARCHAR(255),
  Placas VARCHAR(255),
  Modelo VARCHAR(255),
  ComisionA VARCHAR(255),
  Asunto VARCHAR(255),
  Monto DECIMAL(10,2),
  Magna VARCHAR(10), -
  Premium VARCHAR(10), -
  Gauge_value FLOAT, - 
  Gato VARCHAR(10), -
  Llanta VARCHAR(10), - 
  Cruceta VARCHAR(10), -
  Pinzas VARCHAR(10), - 
  Desarmador VARCHAR(10), -
  Llaves VARCHAR(10), -
  Otro VARCHAR(10), -
  OtroTexto VARCHAR(255), -
  KmSalida INT,
  KmRegreso INT,
  KmRecorridos INT,
  Observaciones TEXT,
  firma1_data LONGBLOB,
  firma2_data LONGBLOB,
  firma3_data LONGBLOB
);
